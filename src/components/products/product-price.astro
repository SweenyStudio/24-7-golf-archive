---
const { price, originalPrice } = Astro.props;
---

<div class="mt-3 flex flex-row items-center gap-x-3">
    <h2 class="sr-only">Product Price</h2>
    <p class="text-2xl font-bold text-neutral-900">
        {price}
    </p>
    <p class="text-lg font-semibold text-neutral-900/50 line-through">
        {originalPrice}
    </p>
</div>
