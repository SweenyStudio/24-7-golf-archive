---
import {Image} from "astro:assets";
const {image, title, description} = Astro.props;
---

<div class="flex flex-col w-80 lg:w-[54rem] snap-center flex-shrink-0">
  <Image
    src={image}
    alt={title}
    class="h-52 lg:h-[30rem] w-full object-cover object-center rounded-3xl"
    width={image.width / 8}
    height={image.height / 8}
  />
  <div class="flex lg:flex-row flex-col justify-between mt-6">
    <h3 class="text-neutral-900 text-xl lg:text-2xl font-bold lg:w-1/3">
      {title}
    </h3>
    <p class="text-neutral-500 text-sm tracking-wide lg:w-1/2 mt-2 lg:mt-0">
      {description}
    </p>
  </div>
</div>
